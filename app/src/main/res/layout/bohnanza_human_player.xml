<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_gui_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.up.cs301.bohnanza.BohnanzaMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <edu.up.cs301.bohnanza.PlayerView
                android:id="@+id/surfaceViewPlayer1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <edu.up.cs301.bohnanza.PlayerView
                android:id="@+id/surfaceViewPlayer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <edu.up.cs301.bohnanza.PlayerView
                android:id="@+id/surfaceViewPlayer3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <edu.up.cs301.bohnanza.PlayerView
                android:id="@+id/surfaceViewPlayer4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BottomLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LinearLayoutButtons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonHarvest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harvest" />

            <Button
                android:id="@+id/buttonStartTrading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Trading" />

            <Button
                android:id="@+id/buttonMakeOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Make Offer" />

            <Button
                android:id="@+id/buttonEndTurn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End Turn" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutHand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <edu.up.cs301.bohnanza.HandView
                android:id="@+id/surfaceViewHand"
                android:layout_width="100dp"
                android:layout_height="190dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <edu.up.cs301.bohnanza.TradeView
                android:id="@+id/surfaceViewTrade"
                android:layout_width="300dp"
                android:layout_height="190dp" />
        </LinearLayout>
    </LinearLayout>
</android.widget.LinearLayout>
